                                                </div>
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-12" })
                                                        <input type="password" placeholder="6 - 15 Characters" id="RePassword" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Doctorpwd, htmlAttributes: new { @class = "control-label col-12" })
