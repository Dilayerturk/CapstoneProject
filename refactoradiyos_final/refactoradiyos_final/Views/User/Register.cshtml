
@model refactoradiyos_final.Models.UserModel

@{
    Layout = null;
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" href="assets/images/favicon.ico">
    <title>Adiyos - Smart Diabetes Mellitus Management Tool</title>
    <link href="~/plugins/switchery/switchery.min.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css">

    <script src="~/assets/js/modernizr.min.js"></script>

</head>
<body>
    @using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <form id="myForm">
                <div class="form-group">
                    <div class="wrapper-page">
                        <div class="text-center">
                            <a href="index.html" class="logo-lg"><i class="mdi mdi-radar"></i> <span>Adiyos</span> </a>
                        </div>

                        <div class="form-horizontal m-t-20" action="index.html">
                            
                            <div class="form-group row">
                                <div class="col-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="mdi mdi-account"></i></span>
                                        </div>
                                        @Html.TextBoxFor(model => model.DoctorName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DoctorName)
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="mdi mdi-email"></i></span>
                                        </div>
                                        @Html.TextBoxFor(model => model.DoctorEmail, new { @class = "form-control", placeholder = "E-mail" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.DoctorEmail)
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="mdi mdi-phone"></i></span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Telefon" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Phone)
                                </div>
                            </div>
                            

                            <div class="form-group row">
                                <div class="col-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="mdi mdi-key"></i></span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Doctorpwd, new { @class = "form-control", placeholder = "Şifre" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Doctorpwd)
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-12">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="mdi mdi-key"></i></span>
                                        </div>
                                        @Html.TextBoxFor(model => model.Doctorepwd, new { @class = "form-control", placeholder = "Şifre (Tekrar)" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Doctorepwd)
                                </div>
                            </div>
                           

                            <div class="form-group text-right m-t-20">
                                <div class="col-xs-12">
                                    <input type="submit" value="Kayıt Ol" class="btn btn-primary btn-custom waves-effect waves-light w-md" />
                                </div>
                            </div>

                            <div class="form-group row m-t-30">
                                <div class="col-12 text-center">
                                    <a href="@Url.Action("Login","User")" class="text-muted">Zaten hesabınız var mı?</a>
                                </div>
                            </div>
                          
                        </div>

                    </div>
                </div>
            </form>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/custom-validator")
    }

    <script>
        var resizefunc = [];
    </script>



    <!-- Plugins  -->
    <script src="~/bundles/jqueryval"></script>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script><!-- Popper for Bootstrap -->
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/detect.js"></script>
    <script src="~/assets/js/fastclick.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/jquery.blockUI.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/wow.min.js"></script>
    <script src="~/assets/js/jquery.nicescroll.js"></script>
    <script src="~/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/plugins/switchery/switchery.min.js"></script>

    <!-- Custom main Js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

</body>
</html>
